<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?> <HBox prefHeight="1024" prefWidth="1440" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ibdev.boavistastorage.controller.TelaEstoqueGerente">

    <VBox fx:id="sidebarVBox" prefHeight="1024" prefWidth="260" spacing="26" style="-fx-background-color: #ffffff;"> <children>
        <ImageView fitHeight="100" fitWidth="260" preserveRatio="true">
            <image><Image url="@../../../images/Logo.png" /></image>
        </ImageView>

        <VBox spacing="20"> <children>
            <HBox styleClass="menu-item" fx:id="btnInicio"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-microsoft-40.png" /></image></ImageView><Label text="Início" /></children></HBox>
            <HBox styleClass="menu-item" fx:id="btnProdutos"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-microsoft-40.png" /></image></ImageView><Label text="Produtos" /></children></HBox>
            <HBox styleClass="menu-item-selecionado" fx:id="btnEstoque"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-microsoft-40.png" /></image></ImageView><Label text="Estoque" textFill="#c74921" /></children></HBox> <HBox styleClass="menu-item" fx:id="btnPedidosVendas"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-dollar-40.png" /></image></ImageView><Label text="Pedidos e Vendas" /></children></HBox>
            <HBox styleClass="menu-item" fx:id="btnPessoas"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-user-40.png" /></image></ImageView><Label text="Pessoas" /></children></HBox>
            <HBox styleClass="menu-item" fx:id="btnFinanceiro"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-profit-analysis-40.png" /></image></ImageView><Label text="Financeiro" /></children></HBox>
        </children>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />

        <VBox spacing="12"> <children>
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="menu-item"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-config-40.png" /></image></ImageView><Label text="Configurações" /></children></HBox>
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="menu-item" fx:id="btnLogout"><children><ImageView fitHeight="20" fitWidth="20"><image><Image url="@../../../images/icons8-logout-40.png" /></image></ImageView><Label text="Logout" /></children></HBox>
        </children>
            <VBox.margin><Insets bottom="40" /></VBox.margin>
        </VBox>
    </children>
    </VBox>

    <VBox prefWidth="1180" spacing="24" style="-fx-background-color:#e7e7e7; -fx-padding:30;">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <children>
                    <Label style="-fx-font-size: 36px; -fx-font-weight: 500;" text="Estoque"> <font><Font name="Poppins ExtraBold" size="12.0" /></font> </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnAdicionar" prefHeight="36" style="-fx-background-color:#c74921; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" text="Adicionar" />
                </children>
            </HBox>

            <TableView fx:id="tabelaEstoque" VBox.vgrow="ALWAYS" style="-fx-background-color: #ffffff; -fx-border-color: #d0d0d0; -fx-border-radius: 8; -fx-background-radius: 8;"> <columns>
                <TableColumn fx:id="colCodigo" prefWidth="80.0" text="CÓDIGO" /> <TableColumn fx:id="colProduto" prefWidth="280.0" text="PRODUTO" /> <TableColumn fx:id="colQtde" prefWidth="130.0" text="QUANTIDADE" />
                <TableColumn fx:id="colPreco" prefWidth="150.0" text="PREÇO CUSTO" /> <TableColumn fx:id="colStatus" prefWidth="150.0" text="STATUS" /> <TableColumn fx:id="colAcoes" prefWidth="250.0" text="AÇÕES" /> </columns>
            </TableView>
        </children>
    </VBox>
</HBox>