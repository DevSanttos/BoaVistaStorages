<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1024" prefWidth="1440" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ibdev.boavistastorage.controller.TelaInicialGerente">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="260" spacing="20" style="-fx-background-color: #ffffff;">
            <children>
                <ImageView fitHeight="100" fitWidth="260.0" style="-fx-alignment: center;">
                    <image>
                        <Image url="@../../../images/Logo.png" />
                    </image>
                </ImageView>
                <VBox spacing="10" style="-fx-padding: 0 0 0 20;">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #c74921;" text="🗄 Início" />
                        <Label text="💼 Produtos" />
                        <Label text="📊 Estoque" />
                        <Label text="💳 Pedidos e Vendas" textFill="#111111" />
                        <Label text="👥 Pessoas" />
                        <Label text="🔍 Financeiro" />
                    </children>
                </VBox>
                <Region VBox.vgrow="ALWAYS" />
                <VBox spacing="10" style="-fx-padding: 0 0 20 20;">
                    <children>
                        <Label text="⚙ Configurações" />
                        <Label text="🚪 Logout" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- Conteúdo Principal -->
    <center>
        <VBox spacing="20" style="-fx-background-color: #e7e7e7; -fx-padding: 30;">
            <children>
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Página Inicial" />

                <!-- Status Estoque + Ações -->
                <HBox spacing="20">
                    <children>
                        <VBox alignment="CENTER" prefHeight="94.0" prefWidth="340.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-background-color: #00d344; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 100;" text="3" />
                                <Label text="Produtos com estoque bom" wrapText="true" />
                            </children>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="94.0" prefWidth="340.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-background-color: #ffb133; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 100;" text="3" />
                                <Label text="Produtos com estoque razoável" wrapText="true" />
                            </children>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="94.0" prefWidth="340.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-background-color: #a83227; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 100;" text="3" />
                                <Label text="Produtos com estoque zerado" wrapText="true" />
                            </children>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                        </VBox>
                    </children>
                </HBox>

                <!-- Botões -->
                <HBox spacing="20">
                    <children>
                        <Button prefHeight="35.0" prefWidth="330.0" style="-fx-background-color:#c74921; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" text="Nova Venda" />
                        <Button prefHeight="33.0" prefWidth="337.0" style="-fx-background-color:#c74921; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" text="Nova Compra">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin></Button>
                        <Button prefHeight="33.0" prefWidth="330.0" style="-fx-background-color:#c74921; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" text="Estoque">
                     <HBox.margin>
                        <Insets left="42.0" />
                     </HBox.margin></Button>
                    </children>
                </HBox>

                <!-- Painel de Resumo -->
                <HBox spacing="20">
                    <children>
                        <VBox prefHeight="739.0" prefWidth="689.0" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Resumo do Estoque" />
                            </children>
                        </VBox>
                        <VBox prefHeight="737.0" prefWidth="413.0" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Últimas Vendas" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
