<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="220.0" prefWidth="180.0" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-background-radius: 8; -fx-border-radius: 8;"
      xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <VBox alignment="CENTER" prefHeight="100.0" prefWidth="160.0" style="-fx-background-color: #e0e0e0; -fx-background-radius: 5;">
        <Label text="Espaço para imagem" textFill="#666666" alignment="CENTER" wrapText="true">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
    </VBox>
    <Label fx:id="lblNomeProduto" text="Nome do Produto" alignment="CENTER" wrapText="true">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
        <VBox.margin>
            <Insets bottom="2.0" />
        </VBox.margin>
    </Label>
    <Label fx:id="lblDescricaoProduto" text="Descrição breve do produto..." alignment="CENTER" wrapText="true">
        <font>
            <Font size="10.0" />
        </font>
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </Label>
    <Label fx:id="lblPrecoProduto" text="R$ 00.00" textFill="#28a745">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </Label>
    <Button fx:id="btnAdicionarAoPedido" text="+ Adicionar" prefWidth="120.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>
</VBox>