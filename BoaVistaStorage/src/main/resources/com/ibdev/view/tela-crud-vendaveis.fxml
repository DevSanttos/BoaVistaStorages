<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<!-- Tela CRUD Vendáveis – 1440 × 1024 -->
<BorderPane fx:controller="com.ibdev.boavistastorage.controller.TelaCRUDVendaveis"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1440" prefHeight="1024">

    <?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.scene.control.*?>
    <?import javafx.scene.image.ImageView?>
    <?import javafx.scene.layout.*?>
    <?import javafx.geometry.Insets?>

    <VBox xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          spacing="15"
          style="-fx-background-color: #ffffff;"
          prefWidth="250">

        <padding><Insets top="20" left="15" right="15" bottom="20"/></padding>

        <!-- Logo -->
        <ImageView fitWidth="200" fitHeight="80" pickOnBounds="true">
            <image>
                <!-- Coloque a sua imagem aqui -->
                @com/ibdev/imagens/logo.png
            </image>
        </ImageView>

        <!-- Início -->
        <Label text="🏠 Início"
               style="-fx-font-weight: bold; -fx-font-size: 14;"/>

        <!-- Produtos com subitens -->
        <TitledPane text="🗂 Produtos" expanded="true">
            <VBox spacing="5">
                <Label text="— Compra"
                       style="-fx-font-size: 13;"/>
                <Label text="— Cadastro insumo"
                       style="-fx-font-size: 13;"/>
                <Label text="— Cadastro vendável"
                       style="-fx-text-fill: #c74921; -fx-font-size: 13; -fx-font-weight: bold;"/>
            </VBox>
        </TitledPane>

        <!-- Estoque -->
        <Label text="🏬 Estoque"
               style="-fx-font-size: 14;"/>

        <!-- Pedidos e Vendas -->
        <Label text="🧾 Pedidos e Vendas"
               style="-fx-font-size: 14;"/>

        <!-- Pessoas -->
        <Label text="👥 Pessoas"
               style="-fx-font-size: 14;"/>

        <!-- Financeiro -->
        <Label text="🔍 Financeiro"
               style="-fx-font-size: 14;"/>

        <!-- Rodapé -->
        <Label text="⚙️ Configurações"
               style="-fx-font-size: 13;"/>
        <Label text="⎋ Logout"
               style="-fx-font-size: 13;"/>
    </VBox>


    <!-- ========== CONTEÚDO PRINCIPAL ========== -->
    <center>
        <VBox spacing="24" style="-fx-background-color:#e7e7e7; -fx-padding:30;">
            <children>
                <!-- Título -->
                <Label text="Cadastro de vendáveis" style="-fx-font-size:28px; -fx-font-weight:bold;" />

                <!-- Formulário -->
                <GridPane hgap="20" vgap="16" prefWidth="1100">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>

                    <!-- Nome / Preço de custo -->
                    <TextField fx:id="txtNome"  promptText="Nome" GridPane.columnSpan="1" />
                    <TextField fx:id="txtPrecoCusto" promptText="Preço de custo" GridPane.columnIndex="1" />

                    <!-- Fornecedor / Preço de venda -->
                    <TextField fx:id="txtFornecedor" promptText="Fornecedor" GridPane.rowIndex="1" />
                    <TextField fx:id="txtPrecoVenda" promptText="Preço de venda" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>

                <!-- Tabela Vendáveis -->
                <TableView fx:id="tabelaVendaveis" prefHeight="400" prefWidth="1100">
                    <columns>
                        <TableColumn fx:id="colNome"        text="Nome"       prefWidth="250" />
                        <TableColumn fx:id="colPrecoCusto"  text="Preço Custo" prefWidth="120" />
                        <TableColumn fx:id="colPrecoVenda"  text="Preço Venda" prefWidth="120" />
                        <TableColumn fx:id="colFornecedor"  text="Fornecedor"  prefWidth="240" />
                        <TableColumn fx:id="colAcoes"       text="Ações"       prefWidth="120" />
                    </columns>
                </TableView>

                <!-- Botões -->
                <HBox spacing="30" alignment="CENTER">
                    <Button fx:id="btnCriar" text="Criar vendável" prefWidth="220" prefHeight="40"
                            style="-fx-background-color:#c74921; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" />
                    <Button fx:id="btnAtualizar" text="Atualizar" prefWidth="220" prefHeight="40"
                            style="-fx-background-color:#d85f2c; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" />
                    <Button fx:id="btnExcluir" text="Excluir" prefWidth="220" prefHeight="40"
                            style="-fx-background-color:#751c00; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:8;" />
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
