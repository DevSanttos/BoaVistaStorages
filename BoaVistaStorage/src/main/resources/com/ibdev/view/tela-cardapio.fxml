<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Tela Cardápio Atendente (1440 × 1024) -->

<HBox prefHeight="1024" prefWidth="1440" style="-fx-font-family: 'Inter';" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ibdev.boavistastorage.controller.TelaPrincipalAtendente">

    <!-- =============== SIDEBAR (= mesma do pedido) ========================= -->
    <VBox prefHeight="1024" prefWidth="260" spacing="26" styleClass="sidebar">

        <!-- Logo -->
        <ImageView fx:id="logoView" fitHeight="100" preserveRatio="true" styleClass="logo-icon" />

        <!-- Menu superior -->
        <VBox spacing="20" styleClass="cima">

            <HBox styleClass="incio">
                <ImageView fitHeight="20" fitWidth="20" styleClass="icons-gridfour" />
                <Label text="Início" />
            </HBox>

            <HBox styleClass="pedidos">
                <HBox styleClass="pedidos1">
                    <ImageView fitHeight="20" fitWidth="20" styleClass="pedidos-child" />
                    <Label text="Pedidos" />
                </HBox>
                <ImageView fitHeight="20" fitWidth="20" styleClass="flecha-icon" />
            </HBox>

            <HBox styleClass="venda">
                <HBox styleClass="venda1">
                    <HBox styleClass="venda3">
                        <ImageView fitHeight="20" fitWidth="20" styleClass="f7money-dollar-circle-icon" />
                        <Label text="Venda" />
                    </HBox>
                    <ImageView fitHeight="20" fitWidth="20" styleClass="flecha-icon" />
                </HBox>
            </HBox>

            <!-- Cardápio (selecionado) -->
            <HBox styleClass="incio"> <!-- usa mesma cor de seleção -->
                <ImageView fitHeight="20" fitWidth="20" styleClass="icons-gridfour" />
                <Label styleClass="incio1" text="Cardápio" />
            </HBox>

            <HBox styleClass="cliente">
                <HBox styleClass="cliente1">
                    <ImageView fitHeight="20" fitWidth="20" />
                    <Label text="Cliente" />
                </HBox>
            </HBox>
        </VBox>

        <!-- Espaço flexível -->
        <Region VBox.vgrow="ALWAYS" />

        <!-- Rodapé -->
        <VBox spacing="12" styleClass="baixo">
            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" styleClass="financeiro1">
                <ImageView fitHeight="20" fitWidth="20" />
                <Label text="Configurações" />
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" styleClass="financeiro1">
                <ImageView fitHeight="20" fitWidth="20" />
                <Label text="Logout" />
            </HBox>
        </VBox>
    </VBox>

    <!-- =============== ÁREA PRINCIPAL (CARDÁPIO) =========================== -->
    <VBox prefWidth="1180" spacing="24" style="-fx-background-color:#e7e7e7; -fx-padding:30;">
        <!-- Título -->
        <Label style="-fx-font-size:28px; -fx-font-weight:bold;" text="Cardápio" />

        <!-- Grid de cards de produtos -->
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color:transparent;" VBox.vgrow="ALWAYS">
            <GridPane fx:id="gridCardapio" alignment="TOP_LEFT" hgap="30" vgap="30">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>

                <!-- EXEMPLO de card (linha 0, col 0) -->
                <VBox alignment="TOP_LEFT" spacing="8" style="-fx-background-color:#ffffff; -fx-background-radius:8; -fx-padding:15;">
                    <StackPane prefHeight="100" style="-fx-background-color:#d9d9d9; -fx-background-radius:4;">
                        <Label text="Sem Imagem" />
                    </StackPane>
                    <Label style="-fx-font-weight:bold;" text="Pastel de Carne P" />
                    <Label style="-fx-font-size:11px;" text="Pastel com recheio de carne moída..." wrapText="true" />
                    <Label style="-fx-text-fill:#c74921; -fx-font-weight:bold;" text="R$ 26,00" />
                </VBox>
                <VBox alignment="TOP_LEFT" spacing="8" style="-fx-background-color:#ffffff; -fx-background-radius:8; -fx-padding:15;" GridPane.columnIndex="1">
                    <children>
                        <StackPane prefHeight="100" style="-fx-background-color:#d9d9d9; -fx-background-radius:4;">
                            <children>
                                <Label text="Sem Imagem" />
                            </children>
                        </StackPane>
                        <Label style="-fx-font-weight:bold;" text="Pastel de Carne P" />
                        <Label style="-fx-font-size:11px;" text="Pastel com recheio de carne moída..." wrapText="true" />
                        <Label style="-fx-text-fill:#c74921; -fx-font-weight:bold;" text="R$ 26,00" />
                    </children>
                </VBox>
                <VBox alignment="TOP_LEFT" spacing="8" style="-fx-background-color:#ffffff; -fx-background-radius:8; -fx-padding:15;" GridPane.columnIndex="2">
                    <children>
                        <StackPane prefHeight="100" style="-fx-background-color:#d9d9d9; -fx-background-radius:4;">
                            <children>
                                <Label text="Sem Imagem" />
                            </children>
                        </StackPane>
                        <Label style="-fx-font-weight:bold;" text="Pastel de Carne P" />
                        <Label style="-fx-font-size:11px;" text="Pastel com recheio de carne moída..." wrapText="true" />
                        <Label style="-fx-text-fill:#c74921; -fx-font-weight:bold;" text="R$ 26,00" />
                    </children>
                </VBox>
                <VBox alignment="TOP_LEFT" spacing="8" style="-fx-background-color:#ffffff; -fx-background-radius:8; -fx-padding:15;" GridPane.columnIndex="3">
                    <children>
                        <StackPane prefHeight="100" style="-fx-background-color:#d9d9d9; -fx-background-radius:4;">
                            <children>
                                <Label text="Sem Imagem" />
                            </children>
                        </StackPane>
                        <Label style="-fx-font-weight:bold;" text="Pastel de Carne P" />
                        <Label style="-fx-font-size:11px;" text="Pastel com recheio de carne moída..." wrapText="true" />
                        <Label style="-fx-text-fill:#c74921; -fx-font-weight:bold;" text="R$ 26,00" />
                    </children>
                </VBox>
                <rowConstraints>
                    <RowConstraints />
                </rowConstraints>
                <!-- Copie / adicione mais VBox‑cards conforme necessário -->
            </GridPane>
        </ScrollPane>
    </VBox>
</HBox>
