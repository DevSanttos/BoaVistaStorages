<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!-- Tela Principal do Atendente (1440 × 1024) -->

<HBox prefHeight="1024" prefWidth="1440" style="-fx-font-family: 'Inter';" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ibdev.boavistastorage.controller.TelaPrincipalAtendente">

    <!-- 1) SIDEBAR - -->
    <VBox fx:id="sidebar" prefHeight="1024" prefWidth="260" spacing="26" style="-fx-background-color:white;                  -fx-border-color:#d9d9d9;                  -fx-border-width:1;                  -fx-padding:8;">

        <!-- Logo -->
        <ImageView fx:id="logoView" fitHeight="100" fitWidth="1.0" preserveRatio="true" />

        <!-- Menu superior -->
        <VBox spacing="20">
            <!-- Início (selecionado) -->
            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-color:#fff8f7;                          -fx-background-radius:12;                          -fx-padding:0 24 0 24;">
                <Label style="-fx-text-fill:#c74921; -fx-font-weight:500;" text="Início" />
            </HBox>

            <!-- Pedidos e Vendas -->
            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-radius:12;                          -fx-padding:0 24 0 24;">
                <Label style="-fx-font-weight:500;" text="Pedidos" />
            </HBox>

            <!-- Financeiro -->
            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-radius:12;                          -fx-padding:0 24 0 24;">
                <Label style="-fx-font-weight:500;" text="Venda" />
            </HBox>
         <HBox fx:id="btnCardapio" alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-radius:12;                          -fx-padding:0 24 0 24;">
            <children>
               <Label style="-fx-font-weight:500;" text="Cardápio" />
            </children>
         </HBox>
         <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-radius:12;                          -fx-padding:0 24 0 24;">
            <children>
               <Label style="-fx-font-weight:500;" text="Cliente" />
            </children>
         </HBox>
        </VBox>

        <!-- Espaço elástico -->
        <Region VBox.vgrow="ALWAYS" />

        <!-- Menu inferior -->
        <VBox spacing="12" style="-fx-border-color:#d9d9d9; -fx-border-width:1 0 0 0; -fx-padding:0 0 12 0;">
            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-radius:12; -fx-padding:0 24 0 24;">
                <ImageView fx:id="iconConfig" fitHeight="20" fitWidth="20" />
                <Label style="-fx-font-size:14px;" text="Configurações" />
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="48" spacing="8" style="-fx-background-radius:12; -fx-padding:0 24 0 24;">
                <ImageView fx:id="iconSair" fitHeight="20" fitWidth="20" />
                <Label style="-fx-font-size:14px;" text="Sair" />
            </HBox>
        </VBox>
    </VBox>

    <!-- 2) LISTA DE PRODUTOS - -->
    <VBox prefHeight="1024.0" prefWidth="1188.0" spacing="24" style="-fx-background-color:#e7e7e7; -fx-padding:30;">
        <Label style="-fx-font-size:28px; -fx-font-weight:bold;" text="Principal" />
      <Pane prefHeight="144.0" prefWidth="790.0" style="-fx-background-color: grey;" />
      <Pane prefHeight="704.0" prefWidth="790.0">
         <children>
            <TableView layoutX="-2.0" prefHeight="706.0" prefWidth="1128.0">
              <columns>
                <TableColumn prefWidth="75.0" text="C1" />
                <TableColumn prefWidth="75.0" text="C2" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </Pane>
    </VBox>
</HBox>
